<!-- app/views/posts/index.html.erb -->
<div class="space-y-6 w-full max-w-2xl">
  <div class="w-full">
    <label class="block text-xl font-bold text-gray-700 mb-6">学習ログ一覧</label>

    <!-- 検索フォーム -->
    <div class="bg-white p-6 shadow rounded mb-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-4">検索・フィルタ</h3>

      <%= form_with url: posts_path, method: :get, local: true, class: "space-y-4" do |f| %>
        <!-- キーワード検索 -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            キーワード検索
          </label>
          <%= f.text_field :keyword, 
              placeholder: 'タイトルから検索...', 
              value: @keyword,
              class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>
        
        <!-- タグフィルタ -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            タグ
          </label>
          <%= f.select :tag_id, 
              options_for_select([['すべて', '']] + @tags.map { |t| [t.name, t.id] }, @tag_id),
              {},
              class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>

        <!-- ユーザーフィルタ -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            ユーザー
          </label>
          <%= f.select :user_id, 
              options_for_select([['すべて', '']] + @users.map { |u| [u.nickname, u.id] }, @user_id),
              {},
              class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>

        <!-- ソート -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            ソート順
          </label>
          <%= f.select :sort,
              options_for_select([['最新順', ''], ['古い順', 'oldest']], @sort),
              {},
              class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>

        <!-- ボタン -->
        <div class="flex gap-3">
          <%= f.submit '検索', class: "flex-1 px-4 py-2 bg-indigo-600 text-white font-medium rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
          <%= link_to 'リセット', posts_path, class: "flex-1 px-4 py-2 bg-gray-200 text-gray-800 font-medium rounded-md hover:bg-gray-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 cursor-pointer text-center" %>
        </div>
      <% end %>
    </div>
    
    <!-- 人気タグ表示 -->
    <div class="bg-white p-6 shadow rounded mb-6">
      <h3 class="text-lg font-semibold text-gray-800 mb-4">人気タグ</h3>
      <div class="flex flex-wrap gap-2">
        <% @tags.each do |tag| %>
          <%= link_to tag.name, 
              posts_path(tag_id: tag.id), 
              class: "inline-block bg-indigo-100 text-indigo-800 px-3 py-1 rounded-full text-sm font-medium hover:bg-indigo-200 transition-colors" %>
        <% end %>
      </div>
    </div>

    <!-- 検索結果表示情報 -->
    <% if @keyword.present? || @user_id.present? %>
      <p class="text-sm text-gray-600 mb-4">
        検索結果: <strong><%= @posts.total_count %></strong>件
        <% if @keyword.present? %>
          (キーワード: <strong><%= @keyword %></strong>)
        <% end %>
        <% if @user_id.present? %>
          (ユーザー: <strong><%= User.find(@user_id).nickname %></strong>)
        <% end %>
      </p>
    <% else %>
      <p class="text-md text-gray-600 mb-4">
        全投稿数： <strong><%= Post.count %></strong>件
      </p>
    <% end %>

    <!-- 投稿一覧 -->
    <% if @posts.any? %>
      <div class="space-y-4 mb-8">
        <% @posts.each do |post| %>
          <div class="bg-white p-6 shadow rounded hover:shadow-lg transition-shadow">
            <div class="flex items-start justify-between border-b border-gray-200 pb-4 mb-4">
              <div class="flex-1">
                <p class="text-lg font-medium text-gray-800">
                  <%= link_to post.title, post_path(post), class: "text-indigo-600 hover:text-indigo-800 hover:underline" %>
                </p>
                <p class="text-sm text-gray-500 mt-2">
                  投稿者: <%= link_to post.user.nickname, user_path(post.user), class: "hover:text-indigo-600 hover:font-bold" %>
                  |
                  投稿日時: <%= l post.created_at, format: :short %>
                </p>
              </div>
            </div>

            <div class="text-sm text-gray-600 line-clamp-3">
              <%= truncate(post.content, length: 150) %>
            </div>

            <!-- いいね機能を追加 -->
            <div class="mt-4 pt-4 border-t border-gray-200">
              <%= render "posts/like_button", post: post, user: current_user %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- ページネーション表示 -->
      <div class="flex justify-center items-center gap-2 flex-wrap">
        <!-- 最初へボタン -->
        <% if @posts.first_page? %>
          <span class="px-4 py-2 border border-gray-200 text-gray-300 rounded-lg bg-gray-50 cursor-not-allowed" title="最初のページです">
            最初
          </span>
        <% else %>
          <%= link_to '最初', 
              posts_path(keyword: @keyword, user_id: @user_id, sort: @sort, page: 1),
              class: "px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-indigo-600 hover:text-white hover:border-indigo-600 transition-colors font-medium" %>
        <% end %>

        <!-- 前へボタン -->
        <% if @posts.first_page? %>
          <span class="px-4 py-2 border border-gray-200 text-gray-300 rounded-lg bg-gray-50 cursor-not-allowed" title="前のページはありません">
            ← 前
          </span>
        <% else %>
          <%= link_to '← 前', 
              posts_path(keyword: @keyword, user_id: @user_id, sort: @sort, page: @posts.current_page - 1),
              class: "px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-indigo-600 hover:text-white hover:border-indigo-600 transition-colors font-medium" %>
        <% end %>

        <!-- ページ番号ボタン（最大7ページまで表示） -->
        <% 
          start_page = [@posts.current_page - 2, 1].max
          end_page = [start_page + 6, @posts.total_pages].min
          
          if start_page > 1
        %>
          <span class="px-2 text-gray-400">...</span>
        <% end %>

        <% (start_page..end_page).each do |page_num| %>
          <% if page_num == @posts.current_page %>
            <span class="px-4 py-2 bg-indigo-600 text-white rounded-lg font-semibold">
              <%= page_num %>
            </span>
          <% else %>
            <%= link_to page_num,
                posts_path(keyword: @keyword, user_id: @user_id, sort: @sort, page: page_num),
                class: "px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-gray-100 transition-colors" %>
          <% end %>
        <% end %>

        <% 
          if end_page < @posts.total_pages
        %>
          <span class="px-2 text-gray-400">...</span>
        <% end %>

        <!-- 次へボタン -->
        <% if @posts.last_page? %>
          <span class="px-4 py-2 border border-gray-200 text-gray-300 rounded-lg bg-gray-50 cursor-not-allowed" title="次のページはありません">
            次 →
          </span>
        <% else %>
          <%= link_to '次 →',
              posts_path(keyword: @keyword, user_id: @user_id, sort: @sort, page: @posts.current_page + 1),
              class: "px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-indigo-600 hover:text-white hover:border-indigo-600 transition-colors font-medium" %>
        <% end %>

        <!-- 最後へボタン -->
        <% if @posts.last_page? %>
          <span class="px-4 py-2 border border-gray-200 text-gray-300 rounded-lg bg-gray-50 cursor-not-allowed" title="最後のページです">
            最後
          </span>
        <% else %>
          <%= link_to '最後', 
              posts_path(keyword: @keyword, user_id: @user_id, sort: @sort, page: @posts.total_pages),
              class: "px-4 py-2 border border-gray-300 text-gray-700 rounded-lg hover:bg-indigo-600 hover:text-white hover:border-indigo-600 transition-colors font-medium" %>
        <% end %>
      </div>
    </div>
    <% else %>
      <div class="bg-blue-50 border border-blue-200 rounded-md p-6 text-center">
        <p class="text-gray-600">
          <% if @keyword.present? || @user_id.present? %>
            「<%= @keyword %>」に該当する投稿はありません
          <% else %>
            投稿がまだありません
          <% end %>
        </p>
      </div>
    <% end %>
  </div>
</div>
